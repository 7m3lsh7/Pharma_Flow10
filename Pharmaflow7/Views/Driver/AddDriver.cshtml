@model Pharmaflow7.Models.AddDriverViewModel

@{
    ViewData["Title"] = "إضافة سائق جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>إضافة سائق جديد</title>
<link rel="stylesheet" href="~/css/add_driver.css">
<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<!-- Main Content -->
<div class="form-container">
    <div class="form-header">
        <h1><i class="fas fa-user-plus"></i> إضافة سائق جديد</h1>
        <p>قم بإدخال بيانات السائق الجديد</p>
    </div>

    <form asp-action="AddDriver" asp-controller="Driver" method="post" class="driver-form">
        @Html.AntiForgeryToken()

        <!-- Personal Information Section -->
        <div class="form-section">
            <h3><i class="fas fa-user"></i> البيانات الشخصية</h3>

            <div class="form-group">
                <label for="FullName">
                    <i class="fas fa-user"></i> الاسم الكامل
                </label>
                <input type="text" id="FullName" name="FullName" required
                       placeholder="أدخل الاسم الكامل للسائق" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Email">
                    <i class="fas fa-envelope"></i> البريد الإلكتروني
                </label>
                <input type="email" id="Email" name="Email" required
                       placeholder="أدخل البريد الإلكتروني" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ContactNumber">
                    <i class="fas fa-phone"></i> رقم الهاتف
                </label>
                <input type="tel" id="ContactNumber" name="ContactNumber" required
                       placeholder="أدخل رقم الهاتف" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password">
                    <i class="fas fa-lock"></i> كلمة المرور
                </label>
                <input type="password" id="Password" name="Password" required
                       placeholder="أدخل كلمة المرور (8 أحرف على الأقل، حرف كبير، رقم)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <!-- License Information Section -->
        <div class="form-section">
            <h3><i class="fas fa-id-card"></i> بيانات الرخصة والهوية</h3>

            <div class="form-group">
                <label for="LicenseNumber">
                    <i class="fas fa-id-badge"></i> رقم الرخصة
                </label>
                <input type="text" id="LicenseNumber" name="LicenseNumber" required
                       placeholder="أدخل رقم رخصة القيادة" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NationalId">
                    <i class="fas fa-id-card"></i> رقم البطاقة الشخصية
                </label>
                <input type="text" id="NationalId" name="NationalId" required
                       placeholder="أدخل رقم البطاقة الشخصية" />
                <span asp-validation-for="NationalId" class="text-danger"></span>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> حفظ السائق
            </button>
            <a href="@Url.Action("ManageDrivers", "Driver")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> العودة إلى القائمة
            </a>
        </div>

        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary">
                <h4><i class="fas fa-exclamation-triangle"></i> يرجى تصحيح الأخطاء التالية:</h4>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </form>
</div>

<!-- Loading Overlay -->
<div class="loading-overlay" id="loading" style="display: none;">
    <div class="spinner"></div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/additional-methods.min.js"></script>
    <script>
        // Form validation using jQuery Validate
        $(document).ready(function () {
            $('.driver-form').validate({
                rules: {
                    FullName: {
                        required: true,
                        minlength: 2
                    },
                    Email: {
                        required: true,
                        email: true
                    },
                    ContactNumber: {
                        required: true // يمكن تعديل القاعدة حسب تنسيق رقم الهاتف المطلوب
                    },
                    Password: {
                        required: true,
                        minlength: 8,
                        pattern: /^(?=.*[A-Z])(?=.*\d).+$/
                    },
                    LicenseNumber: {
                        required: true,
                        minlength: 5
                    },
                    NationalId: {
                        required: true,
                        minlength: 5
                    }
                },
                messages: {
                    FullName: {
                        required: "الاسم الكامل مطلوب.",
                        minlength: "الاسم يجب أن يكون أطول من حرفين."
                    },
                    Email: {
                        required: "البريد الإلكتروني مطلوب.",
                        email: "يرجى إدخال بريد إلكتروني صالح."
                    },
                    ContactNumber: {
                        required: "رقم الهاتف مطلوب.",
                        phoneUS: "يرجى إدخال رقم هاتف صالح."
                    },
                    Password: {
                        required: "كلمة المرور مطلوبة.",
                        minlength: "كلمة المرور يجب أن تكون 8 أحرف على الأقل.",
                        pattern: "كلمة المرور يجب أن تحتوي على حرف كبير ورقم على الأقل."
                    },
                    LicenseNumber: {
                        required: "رقم الرخصة مطلوب.",
                        minlength: "رقم الرخصة يجب أن يكون 5 أحرف على الأقل."
                    },
                    NationalId: {
                        required: "رقم البطاقة الشخصية مطلوب.",
                        minlength: "رقم البطاقة يجب أن يكون 5 أحرف على الأقل."
                    }
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('text-danger');
                    error.insertAfter(element);
                },
                highlight: function (element) {
                    $(element).addClass('error');
                },
                unhighlight: function (element) {
                    $(element).removeClass('error');
                }
            });

            // Show loading overlay on form submit
            $('.driver-form').on('submit', function (e) {
                if ($(this).valid()) {
                    $('#loading').show();
                }
            });
        });

        // Show messages
        function showMessage(message, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${type}`;
            messageDiv.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'}"></i>
                ${message}
            `;

            document.body.appendChild(messageDiv);

            setTimeout(() => {
                messageDiv.remove();
            }, 5000);
        }
    </script>
}