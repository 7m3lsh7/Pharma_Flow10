@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pharmaflow7</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/Signup.css" asp-append-version="true" /> <!-- هنستخدم نفس الـ CSS بتاع Signup -->
</head>
<body>
<div class="d-flex justify-content-center align-items-center ">
    <div class="background-animation">
        <div class="bubble" style="left: 10%; animation-duration: 8s;"></div>
        <div class="bubble" style="left: 30%; animation-duration: 12s;"></div>
        <div class="bubble" style="left: 50%; animation-duration: 9s;"></div>
        <div class="bubble" style="left: 70%; animation-duration: 14s;"></div>
        <div class="bubble" style="left: 90%; animation-duration: 10s;"></div>
    </div>

    <div class="signup-container text-center">
        <h2 class="fw-bold sign">Login</h2>
        
        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <form asp-action="Login" method="post">
            <div class="mb-3 position-relative">
                <input asp-for="Email" class="form-control rounded-pill ps-5 text-black" placeholder="Email Address" required />
                <i class="H fas fa-envelope position-absolute top-50 start-0 translate-middle-y ms-3 text-white"></i>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 position-relative">
                <input asp-for="Password" type="password" class="form-control rounded-pill ps-5" placeholder="Password" required />
                <i class="H fas fa-lock position-absolute top-50 start-0 translate-middle-y ms-3 text-white"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check text-start">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">Remember Me</label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Sign In</button>
        </form>

        <!-- Resend Email Confirmation Link -->
        @if (ViewBag.ShowResendEmailLink == true && !string.IsNullOrEmpty(ViewBag.Email?.ToString()))
        {
            <div class="mt-3">
                <form asp-action="ResendEmailConfirmation" method="post" class="d-inline">
                    <input type="hidden" name="email" value="@ViewBag.Email" />
                    <button type="submit" class="btn btn-link p-0 text-decoration-none">
                        <i class="fas fa-paper-plane me-1"></i>Resend confirmation email
                    </button>
                </form>
            </div>
        }

        <div class="or-separator text-black">- OR -</div>

        <div class="social-login d-flex justify-content-center gap-3 mb-4">
            <a asp-action="ExternalLogin" asp-controller="Auth" asp-route-provider="Google" class="btn"><i class="fab fa-google text-danger"></i></a>
            <a asp-action="ExternalLogin" asp-controller="Auth" asp-route-provider="Facebook" class="btn"><i class="fab fa-facebook-f text-primary"></i></a>
        </div>

        <p class="mt-3 text-black">Don't have an account? <a href="@Url.Action("Register", "Auth")" class="login-link">Sign Up</a></p>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    }
</div>
</body>
</html>