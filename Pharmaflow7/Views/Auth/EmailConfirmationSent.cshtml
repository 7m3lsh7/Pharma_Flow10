@{
    ViewData["Title"] = "Email Confirmation Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-envelope fa-4x text-primary"></i>
                    </div>
                    
                    <h2 class="card-title mb-4 text-success">Check Your Email!</h2>
                    
                    <p class="lead mb-4">
                        We've sent a confirmation email to <strong>@ViewBag.Email</strong>
                    </p>
                    
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Please click the confirmation link in the email to activate your account. 
                        You won't be able to log in until your email is confirmed.
                    </div>
                    
                    <div class="mb-4">
                        <h5>Didn't receive the email?</h5>
                        <ul class="list-unstyled text-muted small">
                            <li>• Check your spam/junk folder</li>
                            <li>• Make sure the email address is correct</li>
                            <li>• Wait a few minutes for the email to arrive</li>
                        </ul>
                    </div>
                    
                    <form asp-action="ResendEmailConfirmation" method="post" class="mb-3">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-paper-plane me-2"></i>Resend Confirmation Email
                        </button>
                    </form>
                    
                    <div class="mt-4">
                        <a asp-action="Login" class="btn btn-link">
                            <i class="fas fa-arrow-left me-2"></i>Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .card-body {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 15px;
    }
    
    .fa-envelope {
        color: #007bff !important;
        filter: drop-shadow(0 4px 8px rgba(0,123,255,0.3));
    }
    
    .btn {
        border-radius: 25px;
        padding: 10px 25px;
        font-weight: 500;
    }
    
    .btn-outline-primary {
        border: 2px solid #007bff;
        transition: all 0.3s ease;
    }
    
    .btn-outline-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,123,255,0.3);
    }
    
    .alert-info {
        border-radius: 10px;
        border: none;
        background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
    }
</style>