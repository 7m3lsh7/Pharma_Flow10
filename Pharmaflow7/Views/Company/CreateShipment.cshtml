@model Pharmaflow7.Models.ShipmentViewModel
@{
    ViewData["Title"] = "Create Shipment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Pharmaflow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Create New Shipment</h1>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }

        <form asp-action="CreateShipment" method="post" id="createShipmentForm">
            <div class="mb-3">
                <label asp-for="ProductId" class="form-label">Product</label>
                <select asp-for="ProductId" class="form-control" id="ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))">
                    <option value="">Select a product</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Destination" class="form-label">Destination</label>
                <input asp-for="Destination" class="form-control" id="Destination" />
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DistributorId" class="form-label">Distributor</label>
                <select asp-for="DistributorId" class="form-control" id="distributorSelect" asp-items="@(new SelectList(Model.Distributors, "Id", "UserName"))">
                    <option value="">Not Assigned</option>
                </select>
                <span asp-validation-for="DistributorId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StoreId" class="form-label">Store</label>
                <select asp-for="StoreId" class="form-control" id="storeSelect">
                    <option value="">Select a distributor first</option>
                </select>
                <span asp-validation-for="StoreId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DriverId" class="form-label">Driver</label>
                <select asp-for="DriverId" class="form-control" id="driverSelect">
                    <option value="">Select a driver</option>
                </select>
                <span asp-validation-for="DriverId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const distributorSelect = document.getElementById("distributorSelect");
        const storeSelect = document.getElementById("storeSelect");
        const driverSelect = document.getElementById("driverSelect");
        const form = document.getElementById("createShipmentForm");
        let isFetchingStores = false;
        let isFetchingDrivers = false;

        distributorSelect.addEventListener("change", function () {
            const distributorId = this.value;
            console.log("Selected DistributorId:", distributorId);
            storeSelect.innerHTML = '<option value="">Select a store</option>';
            driverSelect.innerHTML = '<option value="">Select a driver</option>';

            if (distributorId) {
                // Fetch stores
                const storesUrl = `${window.location.origin}/Company/GetStores?distributorId=${distributorId}`;
                console.log("Fetching stores from:", storesUrl);
                isFetchingStores = true;
                fetch(storesUrl, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => {
                    console.log("Stores response status:", response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(stores => {
                    console.log("Stores received:", stores);
                    stores.forEach(store => {
                        const option = document.createElement("option");
                        option.value = store.id; // Store id may be lowercase
                        option.text = store.storeName || 'Unknown';
                        storeSelect.appendChild(option);
                    });
                    isFetchingStores = false;
                })
                .catch(error => {
                    console.error('Error fetching stores:', error);
                    storeSelect.innerHTML = '<option value="">Error loading stores</option>';
                    isFetchingStores = false;
                });

                // Fetch drivers
                const driversUrl = `${window.location.origin}/Company/GetDrivers?distributorId=${distributorId}`;
                console.log("Fetching drivers from:", driversUrl);
                isFetchingDrivers = true;
                fetch(driversUrl, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    }
                })
                .then(response => {
                    console.log("Drivers response status:", response.status);
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(drivers => {
                    console.log("Drivers received:", drivers);
                    driverSelect.innerHTML = '<option value="">Select a driver</option>';
                    if (drivers && Array.isArray(drivers) && drivers.length > 0) {
                        drivers.forEach(driver => {
                            // Handle both Id and id for case sensitivity
                            const driverId = driver.Id !== undefined ? driver.Id : driver.id;
                            if (driverId !== undefined && Number.isInteger(Number(driverId))) {
                                const option = document.createElement("option");
                                option.value = driverId;
                                option.text = `${driver.fullName || 'Unknown'} - ${driver.licenseNumber || 'N/A'}`;
                                driverSelect.appendChild(option);
                            } else {
                                console.warn("Invalid driver Id:", driver);
                            }
                        });
                    } else {
                        console.log("No drivers available or invalid response.");
                        driverSelect.innerHTML = '<option value="">No drivers available</option>';
                    }
                    isFetchingDrivers = false;
                })
                .catch(error => {
                    console.error('Error fetching drivers:', error);
                    driverSelect.innerHTML = '<option value="">Error loading drivers</option>';
                    isFetchingDrivers = false;
                });
            } else {
                storeSelect.innerHTML = '<option value="">Select a distributor first</option>';
                driverSelect.innerHTML = '<option value="">Select a distributor first</option>';
            }
        });

        form.addEventListener("submit", function (e) {
            const productId = document.getElementById("ProductId").value;
            const destination = document.getElementById("Destination").value;
            const distributorId = distributorSelect.value;
            const storeId = storeSelect.value;
            let driverId = driverSelect.value;

            if (!productId || !destination) {
                e.preventDefault();
                alert("Please select a product and enter a destination.");
                return;
            }

            if (isFetchingStores || isFetchingDrivers) {
                e.preventDefault();
                alert("Please wait until data is loaded.");
                return;
            }

            if (distributorId && !storeId) {
                e.preventDefault();
                alert("Please select a store for the selected distributor.");
                return;
            }

            // Validate DriverId
            if (driverId && (driverId === "undefined" || isNaN(Number(driverId)))) {
                e.preventDefault();
                alert("Please select a valid driver or leave it unselected.");
                driverId = ""; // Reset to empty to map to null
                driverSelect.value = "";
            }

            console.log("Form submitted with data:", {
                ProductId: productId,
                Destination: destination,
                DistributorId: distributorId || "Not Assigned",
                StoreId: storeId || "Not Assigned",
                DriverId: driverId || "Not Assigned"
            });
        });
    </script>
</body>
</html>