@{
    ViewData["Title"] = "Distributor Dashboard";
}

<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <div class="dashboard-wrapper">

        <!-- Header -->
        <div class="dashboard-header">
            <div>
                <h1>Distributor Control Panel</h1>
                <p class="subtitle">Operational overview and logistics summary</p>
            </div>
            <div class="header-actions">
     
     
            </div>
        </div>

        <!-- KPI Cards -->
        <div class="overview-grid">

            <div class="stat-card">
                <div class="stat-icon blue">
                    <i class="fas fa-truck"></i>
                </div>
                <div>
                    <h4>Total Active Shipments</h4>
                    <p class="stat-value">128</p>
                    <span class="stat-note positive">+12% this month</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon green">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div>
                    <h4>Completed Deliveries</h4>
                    <p class="stat-value">342</p>
                    <span class="stat-note positive">On schedule</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon orange">
                    <i class="fas fa-clock"></i>
                </div>
                <div>
                    <h4>Pending Shipments</h4>
                    <p class="stat-value">26</p>
                    <span class="stat-note warning">Requires attention</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon red">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <h4>Delayed Shipments</h4>
                    <p class="stat-value">4</p>
                    <span class="stat-note negative">-2% from last week</span>
                </div>
            </div>

        </div>

        <!-- Activity Section -->
        <div class="card-section">
            <div class="section-header">
                <h3>Recent Activities</h3>
            </div>

            <ul class="activity-list">
                <li>
                    <i class="fas fa-box"></i>
                    Shipment #SH1023 dispatched to Cairo Central Pharmacy
                    <span>2 hours ago</span>
                </li>
                <li>
                    <i class="fas fa-check"></i>
                    Delivery completed for Alexandria Warehouse
                    <span>5 hours ago</span>
                </li>
                <li>
                    <i class="fas fa-truck-loading"></i>
                    Inventory restocked from Main Supplier
                    <span>Yesterday</span>
                </li>
                <li>
                    <i class="fas fa-user-plus"></i>
                    New driver assigned to Delta Region
                    <span>2 days ago</span>
                </li>
            </ul>
        </div>

        <!-- Table Section -->
        <div class="card-section">
            <div class="section-header">
                <h3>Shipment Overview</h3>
            </div>

            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Destination</th>
                            <th>Driver</th>
                            <th>Status</th>
                            <th>Estimated Arrival</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#SH1023</td>
                            <td>Cairo</td>
                            <td>Ahmed Samir</td>
                            <td><span class="badge success">In Transit</span></td>
                            <td>Today 6:30 PM</td>
                        </tr>
                        <tr>
                            <td>#SH1021</td>
                            <td>Giza</td>
                            <td>Mohamed Tarek</td>
                            <td><span class="badge warning">Pending</span></td>
                            <td>Tomorrow</td>
                        </tr>
                        <tr>
                            <td>#SH1018</td>
                            <td>Alexandria</td>
                            <td>Youssef Adel</td>
                            <td><span class="badge danger">Delayed</span></td>
                            <td>Unknown</td>
                        </tr>
                        <tr>
                            <td>#SH1015</td>
                            <td>Mansoura</td>
                            <td>Karim Nabil</td>
                            <td><span class="badge success">Delivered</span></td>
                            <td>Completed</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
