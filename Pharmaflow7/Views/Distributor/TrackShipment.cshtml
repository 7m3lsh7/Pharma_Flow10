    <script>
        // Enhanced JavaScript for statistics and filtering
        document.addEventListener('DOMContentLoaded', function() {
            updateStatistics();
            initializeFilters();
        });

        function updateStatistics() {
            const rows = document.querySelectorAll('.shipment-row');
            const totalShipments = rows.length;
            let inTransit = 0, delivered = 0, pending = 0;

            rows.forEach(row => {
                const statusBadge = row.querySelector('.status-badge');
                if (statusBadge) {
                    const status = statusBadge.textContent.trim();
                    if (status.includes('Transit')) inTransit++;
                    else if (status.includes('Delivered')) delivered++;
                    else pending++;
                }
            });

            document.getElementById('totalShipments').textContent = totalShipments;
            document.getElementById('inTransit').textContent = inTransit;
            document.getElementById('delivered').textContent = delivered;
            document.getElementById('pending').textContent = pending;
        }

        function initializeFilters() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const driverFilter = document.getElementById('driverFilter');

            if (searchInput) {
                searchInput.addEventListener('input', filterTable);
            }
            if (statusFilter) {
                statusFilter.addEventListener('change', filterTable);
            }
            if (driverFilter) {
                driverFilter.addEventListener('change', filterTable);
            }
        }

        function filterTable() {
            const searchTerm = document.getElementById('searchInput')?.value.toLowerCase() || '';
            const statusFilter = document.getElementById('statusFilter')?.value || '';
            const driverFilter = document.getElementById('driverFilter')?.value || '';
            const rows = document.querySelectorAll('.shipment-row');

            rows.forEach(row => {
                const cells = row.querySelectorAll('td');
                const id = cells[0]?.textContent.toLowerCase() || '';
                const product = cells[1]?.textContent.toLowerCase() || '';
                const destination = cells[2]?.textContent.toLowerCase() || '';
                const status = cells[3]?.textContent.toLowerCase() || '';
                const driver = cells[5]?.textContent.toLowerCase() || '';

                const matchesSearch = !searchTerm ||
                    id.includes(searchTerm) ||
                    product.includes(searchTerm) ||
                    destination.includes(searchTerm);

                const matchesStatus = !statusFilter || status.includes(statusFilter.toLowerCase());

                const matchesDriver = !driverFilter ||
                    (driverFilter === 'assigned' && !driver.includes('not assigned')) ||
                    (driverFilter === 'unassigned' && driver.includes('not assigned'));

                row.style.display = matchesSearch && matchesStatus && matchesDriver ? '' : 'none';
            });
        }
    </script>
