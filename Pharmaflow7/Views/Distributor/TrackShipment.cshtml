@model List<Pharmaflow7.Models.ShipmentViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Shipments</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        #map {
            height: 400px;
            width: 100%;
        }

        .modal-lg {
            max-width: 90%;
        }

        .alert {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="container">
            <h1>Track Your Shipments</h1>
            <div id="result" class="result">
                @if (Model == null || !Model.Any())
                {
                    <p>No shipments found.</p>
                }
                else
                {
                    <table class="shipment-table table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Product</th>
                                <th>Destination</th>
                                <th>Status</th>
                                <th>Location</th>
                                <th>Driver</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="shipmentTableBody">
                            @foreach (var shipment in Model)
                            {
                                <tr data-shipment-id="@shipment.Id">
                                    <td>@shipment.Id</td>
                                    <td>@shipment.ProductName</td>
                                    <td>@shipment.Destination</td>
                                    <td>@shipment.Status</td>
                                    <td>
                                        @if (shipment.Latitude.HasValue && shipment.Longitude.HasValue)
                                        {
                                            <span>(@shipment.Latitude, @shipment.Longitude)</span>
                                            <button class="btn btn-secondary btn-sm" onclick="showMap(@shipment.Id, @shipment.Latitude, @shipment.Longitude)">View Map</button>
                                        }
                                        else
                                        {
                                            <span>Not Assigned</span>
                                        }
                                    </td>
                                    <td>@(shipment.DriverName ?? "Not Assigned")</td>
                                    <td>
                                        @if (shipment.IsAcceptedByDistributor == null)
                                        {
                                            <button class="accept-btn btn btn-success btn-sm" data-id="@shipment.Id" onclick="acceptShipment(@shipment.Id)">Accept</button>
                                            <button class="reject-btn btn btn-danger btn-sm" data-id="@shipment.Id" onclick="rejectShipment(@shipment.Id)">Reject</button>
                                        }
                                        else if (shipment.IsAcceptedByDistributor == true)
                                        {
                                            if (shipment.Status == "In Transit")
                                            {
                                                <button class="confirm-delivery-btn btn btn-primary btn-sm" data-id="@shipment.Id" onclick="confirmDelivery(@shipment.Id)">Confirm Delivery</button>
                                                @if (!shipment.DriverId.HasValue)
                                                {
                                                    <button class="assign-driver-btn btn btn-info btn-sm" data-id="@shipment.Id" onclick="showAssignDriverModal(@shipment.Id)">Assign Driver</button>
                                                }
                                            }
                                            else if (shipment.Status == "Delivered")
                                            {
                                                <span class="text-success">Delivered</span>
                                            }
                                            else
                                            {
                                                <span class="text-success">Accepted</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-danger">Rejected</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>

    <div id="mapModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Track Shipment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="map"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="assignDriverModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Assign Driver</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="assignDriverForm" asp-action="AssignDriverToShipment" method="post">
                        <input type="hidden" name="shipmentId" id="shipmentId" />
                        <div class="form-group">
                            <label for="driverId">Select Driver</label>
                            <select name="driverId" id="driverId" class="form-control">
                                <option value="">Select a driver</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Assign</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script id="shipmentData" type="text/json">@Html.Raw(Json.Serialize(Model ?? new List<Pharmaflow7.Models.ShipmentViewModel>()))</script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="~/js/Track_Shipments.js"></script>
</body>
</html>