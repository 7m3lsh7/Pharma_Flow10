<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us - PharmaFlow</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <style>
        :root {
            --primary: #042557;
            --accent: #FF6B6B;
            --secondary: #2e6bc5;
            --text-light: #E0F7FA;
            --glow: rgba(255, 107, 107, 0.5);
            --gold: #FFD700;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            position: relative;
            overflow-x: hidden;
        }

     

        keyframes wave {
            0% { transform: translateX(0); }
            100% { transform: translateX(-1440px); }
        }

        .content {
            padding: 40px;
            position: relative;
            z-index: 1;
        }

        h1, h2, h3 {
            font-weight: 700;
            text-align: center;
            background: linear-gradient(45deg, #66ccff, var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: fadeInDown 1s ease-out;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        p {
            color: var(--text-light);
            font-size: 1.1rem;
            line-height: 1.6;
            animation: fadeIn 1.2s ease-out;
        }

        /* Hero Section */
        .hero-section {
            text-align: center;
            padding: 50px 20px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            margin-bottom: 40px;
            animation: fadeInUp 1s ease-out;
        }

        .hero-section p {
            max-width: 800px;
            margin: 0 auto;
        }

        /* Contact Info Section */
        .contact-info-section {
            padding: 40px 20px;
            animation: fadeIn 1.5s ease-out;
        }

        .contact-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            animation: fadeInUp 1s ease-out;
        }

        .contact-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
            background: rgba(255, 255, 255, 0.15);
        }

        .contact-card i {
            font-size: 2.5rem;
            color: var(--accent);
            margin-bottom: 15px;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .contact-card:hover i {
            transform: rotate(15deg) scale(1.1);
            color: var(--gold);
        }

        .contact-card h3 {
            font-size: 1.3rem;
            margin-bottom: 10px;
        }

        .contact-card p {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.7);
        }

        /* Contact Form Section */
        .contact-form-section {
            padding: 40px 20px;
            animation: fadeIn 1.8s ease-out;
        }

        .contact-form {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            animation: fadeInUp 1s ease-out;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: var(--text-light);
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--accent);
            box-shadow: 0 0 10px rgba(255, 107, 107, 0.3);
            color: var(--text-light);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .btn-submit {
            background: linear-gradient(45deg, #2d89ef, #66ccff);
            border: none;
            padding: 12px 30px;
            border-radius: 30px;
            font-weight: bold;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background: linear-gradient(45deg, #1e70bf, #55b2e8);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        /* Map Section */
        .map-section {
            padding: 40px 20px;
            animation: fadeIn 2s ease-out;
        }

        #map {
            height: 400px;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        }

        /* Animations */
        keyframes fadeInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

       keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Responsive Design */
        media (max-width: 768px) {
            .content {
                padding: 20px;
            }

            h1 {
                font-size: 2rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            .contact-card {
                margin-bottom: 20px;
            }

            #map {
                height: 300px;
            }
        }

        media (max-width: 480px) {
            .content {
                padding: 15px;
            }

            h1 {
                font-size: 1.8rem;
            }

            h2 {
                font-size: 1.2rem;
            }

            .contact-card i {
                font-size: 2rem;
            }

            .contact-card h3 {
                font-size: 1.1rem;
            }

            #map {
                height: 250px;
            }
        }
    </style>
</head>
<body>
    <div class="content">
        <!-- Hero Section -->
        <div class="hero-section">
            <h1>Contact Us</h1>
            <p>
                Have questions or need assistance? Reach out to us through the form below, or use our contact details. We’re here to help you with your PharmaFlow journey!
            </p>
        </div>

        <!-- Contact Info Section -->
        <div class="contact-info-section">
            <h2>Get in Touch</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="contact-card">
                        <i class="fas fa-envelope"></i>
                        <h3>Email</h3>
                        <p>felopater.remon2020@gmail.com</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="contact-card">
                        <i class="fas fa-phone-alt"></i>
                        <h3>Phone</h3>
                        <p>+123456789</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="contact-card">
                        <i class="fas fa-map-marker-alt"></i>
                        <h3>Address</h3>
                        <p>----------------------</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Form Section -->
        <div class="contact-form-section">
            <h2>Send Us a Message</h2>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="contact-form">
                        <form>
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" placeholder="Enter subject" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5" placeholder="Enter your message" required></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-submit">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Map Section -->
        <div class="map-section">
            <h2>Our Location</h2>
            <div id="map"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Trigger animations on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.hero-section, .contact-info-section, .contact-form-section, .map-section, .contact-card').forEach(el => {
            observer.observe(el);
        });

        // Initialize Leaflet Map
        const map = L.map('map').setView([30.0444, 31.2357], 13); // Cairo coordinates

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        L.marker([30.0444, 31.2357]).addTo(map)
            .bindPopup('PharmaFlow Cairo Headquarters')
            .openPopup();
    </script>
</body>
</html>